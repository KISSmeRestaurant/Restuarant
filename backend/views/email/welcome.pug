extends baseEmail

block content
  p Hi #{firstName},
  p Welcome to KissMe Restaurant! We're glad to have you 🎉🙏
  p Please verify your email address by clicking the button below:
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Verify Email
  p If you didn't create an account with KissMe, please ignore this email!